<!DOCTYPE html>
<html lang="en">
    <head>
    <meta4 lang="en" content="en" />
    <%- include('../partials/links'); %>   
</head>
<body>
    <div class="background_image_lunch">
        <div
          class="background_color_breakfast d-flex flex-column justify-content-center"
        >
          <h1 class="breakfast_heading">LUNCH</h1>
          
          <% for (var i =0; i< lunchbuffet.length; i++ ) { %>
          <!-- <h1><%= lunchbuffet.length %></h1> -->
          <% if(lunchbuffet[i].type === "0"){ %>
          <div>
            <div class="d-flex flex-row justify-content-between mainDiv">
              <div class="image_heading d-flex flex-row">
                <img src="./background_image/veg-icon.png" class="veg-icon" alt="Veg">
                <h1 class="food_heading"><%= lunchbuffet[i].name %></h1>
              </div>           
              <p class="price"><%= lunchbuffet[i].price %></p>
            </div>
            <p class="food_items_description"><%= lunchbuffet[i].description %></p>
          </div>
          <%} else if(lunchbuffet[i].type === "1") { %>          
            <div>
              <div class="d-flex flex-row justify-content-between mainDiv">
                <div class="image_heading d-flex flex-row">
                  <img src="./background_image/non-veg-icon.png" class="non-veg-icon" alt="Non-Veg Item">
                  <h1 class="food_heading"><%= lunchbuffet[i].name %></h1>
                </div>
                <p class="price"><%= lunchbuffet[i].price %></p>
              </div>
              <p class="food_items_description"><%= lunchbuffet[i].description %></p>
            </div>
            <%}else if(lunchbuffet[i].type === "3"){%>
                <div>
                    <div class="d-flex flex-row justify-content-between mainDiv">
                      <div class="image_heading d-flex flex-row">
                          <img src="./background_image/non-veg-icon.png" class="non-veg-icon" alt="non-veg">
                        <img src="./background_image/veg-icon.png" class="veg-icon" alt="Veg">
                        <h1 class="food_heading"><%= lunchbuffet[i].name %></h1>
                      </div>
                      <p class="price"><%= lunchbuffet[i].price %></p>
                    </div>
                    <p class="food_items_description"><%= lunchbuffet[i].description %></p>
                  </div>         
          <% } %>
          <% } %>
        </div>
      </div>
</body>
</html>
